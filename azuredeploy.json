{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.5",
    "parameters": {
		"location" : {
			"type" : "string",
			"defaultValue" : "West US",
			"allowedValues" : [
				"East US",
				"West US",
				"South Central US"],
			"metadata" : {
				"description" : "This is the region where the resources will be created"
			}
	},	
    "variables": {
        "storageAccountType": "Standard_LRS",
		"RG_Prod_str": "prdstor",
		"RG_QA_str": "qastor",
		"RG_DevTst_str": "devtststor",
		"RG_Core_str": "corestor"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('RG_Prod_str')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "[variables('storageAccountType')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('RG_QA_str')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "[variables('storageAccountType')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('RG_DevTst_str')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "[variables('storageAccountType')]"
            }
        },        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('RG_Core_str')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "[variables('storageAccountType')]"
            }
        }        
    ]
}
